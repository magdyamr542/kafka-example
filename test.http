# getting all topics
GET http://localhost:1234/getTopics 

####
# checking if a topic exists
GET http://localhost:1234/doesTopicExist 
content-type: application/json

{
    "topic": "mongo-topic"
}

####
# getting topic metadata
GET http://localhost:1234/getTopicMetadata 
content-type: application/json

{
    "topic": "mongo-topic"
}


####
# creating a topic
POST http://localhost:1234/createTopic HTTP/1.1
content-type: application/json

{
    "topic": "mongo-topic"
}

####
# deleting a topic
DELETE http://localhost:1234/deleteTopic HTTP/1.1
content-type: application/json

{
    "topic": "some-non-existent-topic"
}

####
# deleting topics
DELETE http://localhost:1234/deleteTopics HTTP/1.1
content-type: application/json

{
    "topics": ["1" , "3"]
}


####
# sending a message to a topic that does exist
POST http://localhost:1234/sendMessage HTTP/1.1
content-type: application/json

{
    "topic": "mongo-topic",
    "message" : {
        "key" : "second key"
    }
}

####
# sending a message to a topic that does not exist
POST http://localhost:1234/sendMessage HTTP/1.1
content-type: application/json

{
    "topic": "234234",
    "message" : "Another Generated Message to test-1 Topic"
}


###
# broadcasting a message to all topics provided
POST http://localhost:1234/broadcastMessage HTTP/1.1
content-type: application/json

{
    "topics": ["first-topic" , "mongo-topic" ],
    "message" : "Broadcasted message"
}
